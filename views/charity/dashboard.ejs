    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
}

.stat-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.restaurant-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(13, 110, 253, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
}

.empty-state {
    padding: 2rem;
}

.table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
}

.order-details p {
    font-size: 0.9rem;
}

.badge {
    font-weight: 500;
    padding: 0.5em 0.75em;
}

.btn {
    font-weight: 500;
}

.card {
    border-radius: 1rem;
    overflow: hidden;
}

.card-header {
    border-bottom: 1px solid rgba(0,0,0,.05);
}

.list-group-item {
    padding: 1.25rem;
}

.list-group-item:hover {
    background-color: rgba(0,0,0,.02);
}

.form-control {
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    border: 1px solid rgba(0,0,0,.1);
}

.form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.25rem rgba(13,110,253,.15);
}

.input-group-text {
    border-radius: 0 0.5rem 0.5rem 0;
    background-color: #f8f9fa;
    border: 1px solid rgba(0,0,0,.1);
}

.nav-tabs-custom {
    border-bottom: 1px solid rgba(0,0,0,.05);
    padding: 0.5rem 1rem 0;

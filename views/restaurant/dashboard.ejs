<!-- Main Content Area -->
<div class="row g-4">
    <!-- Add Food Item Card -->
    <div class="col-md-6">
        <div class="card custom-card h-100">
            <div class="card-header bg-transparent border-0 py-4">
                <div class="d-flex align-items-center">
                    <div class="card-icon">
                        <i class="fas fa-plus-circle"></i>
                    </div>
                    <h4 class="mb-0 ms-3">Add Food Item</h4>
                </div>
            </div>
            <div class="card-body">
                <form action="/restaurant/food-item" method="POST" class="needs-validation" novalidate>
                    <div class="form-floating mb-3">
                        <select class="form-select" id="name" name="name" required>
                            <option value="">Select Food Item</option>
                            <option value="White rice">White rice</option>
                            <option value="Dal">Dal</option>
                            <option value="Currys">Currys</option>
                            <option value="Chicken curry">Chicken curry</option>
                            <option value="Mutton curry">Mutton curry</option>
                            <option value="Fruits">Fruits</option>
                            <option value="Bread">Bread</option>
                            <option value="Pasta">Pasta</option>
                            <option value="Sambar">Sambar</option>
                            <option value="Biryani">Biryani</option>
                        </select>
                        <label for="name">Food Item</label>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="number" class="form-control" id="quantity" name="quantity" required min="0" step="0.01">
                                <label for="quantity">Quantity</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="unit" name="unit" required>
                                    <option value="">Select Unit</option>
                                    <option value="kg">Kilograms (kg)</option>
                                    <option value="g">Grams (g)</option>
                                    <option value="l">Liters (l)</option>
                                    <option value="ml">Milliliters (ml)</option>
                                    <option value="pieces">Pieces</option>
                                </select>
                                <label for="unit">Unit</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="hidden" class="form-control" id="expiryDate" name="expiryDate" required>
                        <label for="expiryDate" style="display: none;">Expiry Date</label>
                    </div>
                    <div class="form-floating mb-4">
                        <textarea class="form-control" id="description" name="description" style="height: 100px" placeholder="Add any additional details about the food item..."></textarea>
                        <label for="description">Description</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 submit-btn">
                        <i class="fas fa-plus-circle me-2"></i>Add Food Item
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Current Inventory Card -->
    <div class="col-md-6">
        <div class="card custom-card h-100">
            <div class="card-header bg-transparent border-0 py-4">
                <div class="d-flex align-items-center">
                    <div class="card-icon">
                        <i class="fas fa-boxes"></i>
                    </div>
                    <h4 class="mb-0 ms-3">Current Inventory</h4>
                </div>
            </div>
            <div class="card-body">
                <% if (foodItems.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <h5>No Items Found</h5>
                        <p>Start by adding some food items to your inventory</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                    <th>Expiry</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% foodItems.forEach(item => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="item-icon">
                                                    <i class="fas fa-utensils"></i>
                                                </div>
                                                <span class="ms-2 fw-medium"><%= item.name %></span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="quantity-control">
                                                <button class="btn btn-icon minus-btn" type="button" data-id="<%= item._id %>">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                                <input type="number" class="form-control quantity-input" 
                                                    value="<%= item.quantity %>" 
                                                    data-id="<%= item._id %>"
                                                    min="0"
                                                    readonly>
                                                <button class="btn btn-icon plus-btn" type="button" data-id="<%= item._id %>">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-light text-dark"><%= item.unit %></span></td>
                                        <td>
                                            <span class="badge bg-<%= new Date(item.expiryDate) < new Date() ? 'danger' : 'success' %>">
                                                <%= new Date(item.expiryDate).toLocaleDateString() %>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-icon btn-danger delete-item" data-id="<%= item._id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

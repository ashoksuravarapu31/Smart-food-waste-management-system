<!-- Pending Orders Section -->
<div class="card custom-card mb-4">
    <div class="card-header bg-transparent border-0 py-4">
        <div class="d-flex align-items-center">
            <div class="card-icon">
                <i class="fas fa-clock"></i>
            </div>
            <h4 class="mb-0 ms-3">Pending Orders</h4>
        </div>
    </div>
    <div class="card-body">
        <% if (pendingOrders.length === 0) { %>
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h5>No Pending Orders</h5>
                <p>All orders have been processed</p>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Charity</th>
                            <th>Items</th>
                            <th>Pickup Address</th>
                            <th>Pickup Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pendingOrders.forEach(order => { %>
                            <tr>
                                <td>
                                    <span class="order-id">#<%= order._id %></span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="charity-icon">
                                            <i class="fas fa-hands-helping"></i>
                                        </div>
                                        <span class="ms-2 fw-medium"><%= order.charity.name %></span>
                                    </div>
                                </td>
                                <td>
                                    <div class="order-items">
                                        <% order.items.forEach(item => { %>
                                            <div class="order-item">
                                                <i class="fas fa-circle-dot"></i>
                                                <span><%= item.quantity %> <%= item.unit %> <%= item.name %></span>
                                            </div>
                                        <% }); %>
                                    </div>
                                </td>
                                <td><%= order.pickupAddress %></td>
                                <td><%= new Date(order.pickupTime).toLocaleString() %></td>
                                <td>
                                    <div class="action-buttons">
                                        <form action="/restaurant/order/accept/<%= order._id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-icon btn-success">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                        <form action="/restaurant/order/reject/<%= order._id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-icon btn-danger">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>


